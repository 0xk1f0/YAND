---
import { getCurrentDateTime } from "../../lib/helpers";

interface Props {
    foreground: string;
    background: string;
}

const { foreground, background } = Astro.props;
const { DATE, TIME } = getCurrentDateTime("en", "de");
---

<div
    style={{ "border-color": foreground }}
    class="flex flex-col mt-auto text-left border-b-2 md:border-none mb-5 md:mb-0 pb-5 md:pb-0"
>
    <h1
        id="widget-time-display"
        style={{ color: foreground }}
        class="text-3xl md:text-4xl font-bold"
    >
        {TIME}
    </h1>
    <h1
        id="widget-date-display"
        style={{ color: foreground }}
        class="text-lg md:text-xl font-bold"
    >
        {DATE}
    </h1>
</div>

<script>
    import { getCurrentDateTime } from "../../lib/helpers";

    let timeDisplay: HTMLElement = document.getElementById(
        "widget-time-display",
    )!;
    let dateDisplay: HTMLElement = document.getElementById(
        "widget-date-display",
    )!;

    setInterval(() => {
        const { DATE, TIME } = getCurrentDateTime("en", "de");
        timeDisplay.innerText = TIME;
        dateDisplay.innerText = DATE;
    }, 10000);
</script>
