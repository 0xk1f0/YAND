---
import path from "path";

interface Props {
    name: string;
    tag: string;
    url: string;
    image: string;
    description: string;
    foreground: string;
    background: string;
}

const ICON_PATH = process.env.ICON_PATH || "/icons";
const { image, tag, url, name, description, foreground, background } =
    Astro.props;
---

<a
    id="entry-element"
    href={url}
    style={{ "background-color": background }}
    class="rounded-2xl flex flex-row w-full hover:translate-x-2 transition-all drop-shadow-3xl whitespace-nowrap"
>
    <div
        class="mx-6 my-5 flex flex-row space-x-2 items-center justify-center w-full"
    >
        <div>
            <img
                class="max-w-[48px]"
                src={path.normalize(ICON_PATH) + `/${image}`}
            />
        </div>
        <div class="flex flex-col flex-1 whitespace-nowrap">
            <p style={{ color: foreground }} class="text-xl align-center whitespace-nowrap">
                {name}
            </p>
            <p style={{ color: foreground }} class="text-base">{description}</p>
        </div>
    </div>
    <div
        id="badge-element"
        style={{ "background-color": foreground }}
        class="rounded-lg p-1 mt-auto mb-4 translate-x-1 min-h-6 bottom-[0%] right-[0%] whitespace-nowrap"
    >
        <p
            style={{ color: background }}
            class="text-sm font-mono italic font-bold hidden"
        >
            {"#" + tag}
        </p>
    </div>
</a>

<style>
    #entry-element:hover > #badge-element {
        @apply !absolute;
    }

    #entry-element:hover > #badge-element > p {
        @apply block;
    }
</style>
